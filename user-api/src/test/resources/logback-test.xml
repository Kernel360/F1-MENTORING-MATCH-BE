<configuration scan="true" scanPeriod="60 seconds">
    <property name="LOG_TIMESTAMP" value="%d{yyyy-MM-dd HH:mm:ss}"/>
    <property name="CONSOLE_LOG_PATTERN" value="%green([${LOG_TIMESTAMP}]) %magenta([%thread]) %highlight([%level]) - %msg%n"/>
    <property name="LOG_PATTERN" value="[${LOG_TIMESTAMP}] [%thread] [%level] - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
        </filter>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>${CONSOLE_LOG_PATTERN}</Pattern>
        </encoder>

    </appender>
    
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="com.biengual.userapi" level="INFO"/>


</configuration>